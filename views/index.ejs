<script type="text/javascript">
  let paintingsData = <%- JSON.stringify(paintingsData) %>;
  paintingsData.forEach(data =>
  {
    let paintPath = data.painting_path;

    $(".carousel-inner").append(`<div class="carousel-item" data-interval="3000"><img src="${paintPath}" class="d-block w-100" alt="..."></div>`);

  });

</script>

